<%#app/views/contact_forms/new.html.erb %>
<% provide(:title, "Contact Me" ) %>
<h1>Contact Me</h1>

<p>Any feedback/suggestions/compliments? Leave them down below!</p>
<h1>FORM NOT ACTIVELY FUNCTIONAL.</h1>
<p>If you wish to contact me, please e-mail
  me at anguyen@hmc.edu.</p>
<div class="d-flex align-content-center new-bead">
<%= form_for @contact_form do |f| %>
  <%= render 'shared/error_messages', source: @contact_form %>

  <%= f.label :name, class: "form-label" %>
  <%= f. text_field :name, class: "form-control" %>

  <%= f.label :email, class: "form-label" %>
  <%= f.email_field :email, class: "form-control"  %>

  <%= f.label :message, class: "form-label" %>
  <%= f.text_area :message, size: "60x8", class:"form-control" %>

  <%= f.hidden_field :nickname %>

  <%= f.button "Send Message", class: "button form-control" %>
<% end %>
</div>
