<%# Ruby on Rails Tutorial, error message%>
<% if source.errors.any? %>
    <div class="error-explanation">
      <div class="error-header">
        This form contains <%= pluralize(source.errors.count, "error") %>.
      </div>
      <ul>
      <% source.errors.full_messages.each do |msg| %>
        <li><%= msg +"." %></li>
      <% end %>
    </ul>
  </div>
<% end %>
