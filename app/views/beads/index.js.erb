// https://medium.com/swlh/advanced-filtering-for-your-rails-5-application-28c8da2d29b6
function replaceBeads (innerHTML) {
  const beads = document.getElementsByClassName('bead-list')[0];
  let temp = innerHTML;
  for (let i = 0; i <3 ; i ++) {
      temp += "<div class = 'bead-placeholder'></div>";
  }
  beads.innerHTML = temp;
}

if ('<%= @filter %>' === "[]") {
replaceBeads("<%= j render 'beads', beads: Bead.all %><div class = 'bead'><%=j link_to('Add New Bead', new_bead_path, id: 'add-bead' ) %></div>");
}
else {
replaceBeads("<%= j render 'beads', beads: @beads %><div class = 'bead'><%=j link_to('Add New Bead', new_bead_path, id: 'add-bead' ) %></div>");
}
